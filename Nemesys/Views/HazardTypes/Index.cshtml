@model Nemesys.ViewModels.HazardTypes.HazardTypeListViewModel

@{
    ViewData["Title"] = "All Hazazrd Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h2>Showing @Model.TotalEntries hazard types.</h2>

<div class="row">
    @foreach(var hazardType in Model.HazardTypes)
    {
        <div class="card" style="width: 18rem; padding: 20px; margin: 20px">
            <div class="card-body">
                <h3 class="card-title">@hazardType.hazardTypeName</h3>
                <a asp-controller="HazardTypes" asp-action="Delete" asp-route-id="@hazardType.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>