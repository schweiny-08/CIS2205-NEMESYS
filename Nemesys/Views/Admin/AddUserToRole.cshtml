@model Nemesys.ViewModels.Admin.AddUserToRoleViewModel
@{
    ViewData["Title"] = "Add User To Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userEmail"></label>
                <input asp-for="userEmail" class="form-control" />
                <span asp-validation-for="userEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId"></label>
                <div>
                    <select asp-for="RoleId"
                            asp-items="@(new SelectList(Model.UserRoleList, "Id", "RoleName"))">
                        <option value="">Select role type</option>
                    </select>
                </div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div> 
            <button style="width:auto" type="submit" class="btn btn-primary">Create Role</button>
        </form>
    </div>
</div>