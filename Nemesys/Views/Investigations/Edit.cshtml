@model Nemesys.ViewModels.Investigations.CreateEditInvestigationViewModel

@{
    ViewData["Title"] = "Edit Investigation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Investigation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="dateTime" class="control-label"></label>
                <input asp-for="dateTime" class="form-control" />
                <span asp-validation-for="dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reportStatus" class="control-label"></label>
                @*<input asp-for="reportStatus" class="form-control" />*@
                <br />Being Investigated: @Html.RadioButtonFor(m => m.reportStatus, "Being Investigated")
                <br />No Action Needed: @Html.RadioButtonFor(m => m.reportStatus, "No Action Needed")
                <br />Closed: @Html.RadioButtonFor(m => m.reportStatus, "Closed")
                <span asp-validation-for="reportStatus" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Update Investigation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Investigations" asp-action="Details" asp-route-id="@Model.Id">Back to Investigation</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
