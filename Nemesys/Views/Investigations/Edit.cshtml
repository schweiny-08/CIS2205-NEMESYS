@model Nemesys.Models.FormModels.Investigation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Investigation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="investigatorId" class="control-label"></label>
                <select asp-for="investigatorId" class="form-control" asp-items="ViewBag.investigatorId"></select>
                <span asp-validation-for="investigatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reportId" class="control-label"></label>
                <select asp-for="reportId" class="form-control" asp-items="ViewBag.reportId"></select>
                <span asp-validation-for="reportId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="idNum" />
            <div class="form-group">
                <label asp-for="dateTime" class="control-label"></label>
                <input asp-for="dateTime" class="form-control" />
                <span asp-validation-for="dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
