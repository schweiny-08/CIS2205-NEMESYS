@model Nemesys.ViewModels.Investigations.InvestigationListViewModel

@{
    ViewData["Title"] = "All Investigations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h2>Showing @Model.TotalEntries investigations.</h2>

<div class="row">
    @foreach (var investiagiton in Model.Investigations)
    { 
        <div class="card" style="width: 18rem; padding: 20px; margin: 20px">
            <div class="card-body">
                <h3 class="card-title">Investigation for: @investiagiton.report.Title</h3>
                <p class="small">Report by: ADD REPORTER TO REPORT@*@investiagiton.report.*@</p>
                <p class="small">Investigation by: @investiagiton.investigator.fName @investiagiton.investigator.lName</p>
            </div>
            <a asp-controller="Investigations" asp-action="Details" asp-route-id="@investiagiton.Id" class="btn btn-primary">Investigation Details</a>
        </div>    
    }
</div>