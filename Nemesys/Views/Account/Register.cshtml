@{
    ViewData["Title"] = "Create An Account!";
}
@model Nemesys.Models.ViewModels.RegisterAccountViewModel

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="email" class="col-md-2">Email</label>
        <div class="col-md-5">
            <input asp-for="email" class="form-control" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        
        <label asp-for="password" class="col-md-2">Password</label>
        <div class="col-md-5">
            <input asp-for="password" class="form-control" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        
        <label asp-for="fName" class="col-md-2">First Name</label>
        <div class="col-md-5">
            <input asp-for="fName" class="form-control" />
            <span asp-validation-for="fName" class="text-danger"></span>
        </div>
        
        <label asp-for="lName" class="col-md-2">Last Name</label>
        <div class="col-md-5">
            <input asp-for="lName" class="form-control" />
            <span asp-validation-for="lName" class="text-danger"></span>
        </div>
        
        <label asp-for="image" class="col-md-2">Profile Picture</label>
        <div class="col-md-5">
            <input asp-for="image" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Create Account" />
            <p>Already have an account? Click <a asp-controller="Account" asp-action="Login">here</a> to login.</p>
        </div>
    </div>
</form>