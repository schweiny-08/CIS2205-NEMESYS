@model Nemesys.ViewModels.Admin.ListReportersViewModel

@{
    ViewData["Title"] = "Hall Of Fame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h2>Showing @Model.TotalEntries reporters in the hall of fame.</h2>

<div class="row">
    @foreach (var users in Model.Reporters)
    {
        <div class="card" style="width: 18rem; padding: 20px; margin: 20px">
            <div class="card-body">
                <h3 class="card-title">@users.fName @users.lName</h3>
                <div class="card-body">
                    <p class="card-text">@Html.ActionLink(users.email, "ProfilePage", "User", new { email = users.email })</p>
                    <p class="card-text">@users.numOfReports reportrs in the past year.</p>
                </div>
            </div>
        </div>
    }
</div>